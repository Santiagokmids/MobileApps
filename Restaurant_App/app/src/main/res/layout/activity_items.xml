<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemsActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:text="MenÃº"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/aBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="16dp"
        android:background="#F2B705"
        android:text="Ajiaco"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/bBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="#F2B705"
        android:text="Hamburguesa"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aBtn" />

    <Button
        android:id="@+id/cBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="#F2B705"
        android:text="Baby beef"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bBtn" />

    <Button
        android:id="@+id/addBtn"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:background="#F28705"
        android:text="Confirmar"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/checkA"
        android:layout_width="379dp"
        android:layout_height="49dp"
        android:background="#468A8A8A"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/aBtn"
        app:layout_constraintStart_toStartOf="@+id/aBtn"
        app:layout_constraintTop_toTopOf="@+id/aBtn" />

    <Button
        android:id="@+id/checkB"
        android:layout_width="379dp"
        android:layout_height="49dp"
        android:background="#468A8A8A"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/bBtn"
        app:layout_constraintStart_toStartOf="@+id/bBtn"
        app:layout_constraintTop_toTopOf="@+id/bBtn" />

    <Button
        android:id="@+id/checkC"
        android:layout_width="379dp"
        android:layout_height="49dp"
        android:background="#468A8A8A"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/cBtn"
        app:layout_constraintStart_toStartOf="@+id/cBtn"
        app:layout_constraintTop_toTopOf="@+id/cBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>